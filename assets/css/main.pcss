@tailwind base;
@tailwind components;
@tailwind utilities;

.content {
  @apply w-11/12 lg:w-4/5;
}

:root{
  @apply bg-base-200;
}

.upper {
  min-height: 90vh;
}

.panel {
  @apply shadow-lg rounded-2xl p-4 bg-base-100;
}

.hiddenPanel {
  @apply grid grid-cols-1 gap-6 lg:grid-cols-3;
}

.modal {
  align-items: center;
}

.modal .modal-box {
  border-radius: 1rem;
}


